@model CargoAllViewModel

<div class="col-md-4">
    <div class="card mb-3">
        <div class="card-body text-center">
            <h2>V&D Cargoes's cargo</h2>
            <h6>Name: <b>@Model.Name</b></h6>
            <h6>Physical state: <b>@Model.PhysicalState</b></h6>
            <br />
            <a asp-controller="Cargo" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success" style="background-color: blue">Details</a>
            <a asp-controller="Cargo" asp-action="Ship" asp-route-id="@Model.Id"
               class="btn btn-success" style="background-color: green">Deliver this cargo</a>
        </div>
    </div>
</div>