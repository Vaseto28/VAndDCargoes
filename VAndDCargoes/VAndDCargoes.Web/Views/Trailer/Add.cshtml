@{
    ViewData["Title"] = "Add trailer";
}

@model TrailerAddViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <h1 align="center">@ViewData["Title"]</h1>

    <form asp-action="Add" method="post">
        <div class="mb-3">
            <label asp-for="@Model.Capacity" class="form-label-add-edit"></label>
            <input asp-for="@Model.Capacity" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageUrl" class="form-label-add-edit"></label>
            <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group col-md-30 d-flex justify-content-between">
            <div style="width: 25%" class="form-group col-mb-10">
                <label>Trailer condition</label>
                <select asp-for="@Model.Condition" class="form-control" aria-required="true">
                    <option value="0">Excellent</option>
                    <option value="1">Very good</option>
                    <option value="2">Good</option>
                    <option value="3">Bad</option>
                    <option value="4">Need of service</option>
                </select>
            </div>

            <div style="width: 25%" class="form-group col-mb-10">
                <label>Trailer category</label>
                <select asp-for="@Model.Category" class="form-control" aria-required="true">
                    <option value="0">Platform</option>
                    <option value="1">Refrigerator</option>
                    <option value="2">Gondola</option>
                    <option value="3">Tank truck</option>
                    <option value="4">Container ship</option>
                    <option value="5">Car transporter</option>
                </select>
            </div>

            <div style="width: 25%" class="form-group col-mb-10">
                <label>Trailer dementions</label>
                <select asp-for="@Model.Dementions" class="form-control" aria-required="true">
                    <option value="0">Small trailer</option>
                    <option value="1">Hanger</option>
                    <option value="2">Mega trailer</option>
                    <option value="3">Jumbo trailer</option>
                </select>
            </div>
        </div>
        <br />
        <div class="mb-3">
            <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
</body>
</html>