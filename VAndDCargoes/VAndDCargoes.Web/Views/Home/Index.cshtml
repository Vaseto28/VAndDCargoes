@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>V&D Cargoes Welcome</title>
    <link src="~/css/homeStyles.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="~/js/sliderScript.js"></script>
</head>
<body>
    <h1 align="center">Welcome to V&D Cargoes LTD!</h1>

    <center>
        <div style="width: 95%" id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <center>
                <div class="carousel-inner responsive">
                    <div class="carousel-item active">
                        <img class="d-block" style="width: 95%; height: 70%" src="~/img/firstImage.png" />
                    </div>
                    <div class="carousel-item active">
                        <img class="d-block" style="width: 95%; height: 70%" src="~/img/secondImage.png" />
                    </div>
                    <div class="carousel-item active">
                        <img class="d-block" style="width: 95%; height: 70%" src="~/img/thirdImage.png" />
                    </div>
                </div>
            </center>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </center>

</body>
</html>