@{
    ViewData["Title"] = "Edit truck";
}

@model TruckEditViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <h1 align="center">@ViewData["Title"]</h1>

    <form asp-action="Edit" method="post">
        <div class="mb-3">
            <label asp-for="@Model.Make" class="form-label-add-edit">Make</label>
            <input asp-for="@Model.Make" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Make" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Model" class="form-label-add-edit">Model</label>
            <input asp-for="@Model.Model" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Model" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.RegistrationNumber" class="form-label-add-edit"></label>
            <input asp-for="@Model.RegistrationNumber" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.RegistrationNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FuelCapacity" class="form-label-add-edit"></label>
            <input asp-for="@Model.FuelCapacity" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.FuelCapacity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.TravelledDistance" class="form-label-add-edit"></label>
            <input asp-for="@Model.TravelledDistance" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.TravelledDistance" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.CreatedOn" class="form-label-add-edit"></label>
            <input asp-for="@Model.CreatedOn" class="form-control" aria-required="true" value="@DateTime.ParseExact(Model.CreatedOn, "MM/dd/yyyy", default)" />
            <span asp-validation-for="@Model.CreatedOn" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageUrl" class="form-label-add-edit"></label>
            <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Truck condition</label>
            <select asp-for="@Model.Condition" class="form-control" aria-required="true">
                <option value="0">Excellent</option>
                <option value="1">Very good</option>
                <option value="2">Good</option>
                <option value="3">Bad</option>
                <option value="4">Need of service</option>
            </select>
        </div>
        <div class="mb-3">
            <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Edit" />
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
</body>
</html>