@{
    ViewData["Title"] = "Add cargo";
}

@model CargoAddViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <h1 align="center">@ViewData["Title"]:</h1>

    <form asp-action="Add" method="post">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label-add-edit"></label>
            <input asp-for="@Model.Name" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label-add-edit"></label>
            <input asp-for="@Model.Description" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Weight" class="form-label-add-edit"></label>
            <input asp-for="@Model.Weight" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.Weight" class="text-danger"></span>
        </div>
        <div class="row">
            <div align="justify" class="mb-3" style="width: 44%">
                <label asp-for="@Model.PhysicalState"></label>
                <br />
                <div class="col">
                    <label>Hard</label>
                    <input style="margin-right: 15px" asp-for="@Model.PhysicalState" type="radio" value="0" />
                    <label>Liquid</label>
                    <input style="margin-right: 15px" asp-for="@Model.PhysicalState" type="radio" value="1" />
                    <label>Gas</label>
                    <input style="margin-right: 15px" asp-for="@Model.PhysicalState" type="radio" value="2" />
                </div>
            </div>
            <div align="justify" class="mb-3" style="width: 53%">
                <label asp-for="@Model.Category"></label>
                <br />
                <div class="col">
                    <label>Food</label>
                    <input style="margin-right: 15px" asp-for="@Model.Category" type="radio" value="0" />
                    <label>Livestock</label>
                    <input style="margin-right: 15px" asp-for="@Model.Category" type="radio" value="1" />
                    <label>Chemicals</label>
                    <input style="margin-right: 15px" asp-for="@Model.Category" type="radio" value="2" />
                    <label>Flameable substances</label>
                    <input style="margin-right: 15px" asp-for="@Model.Category" type="radio" value="3" />
                    <label>Cars</label>
                    <input style="margin-right: 15px" asp-for="@Model.Category" type="radio" value="4" />
                    <label>Equipment or machinery</label>
                    <input style="margin-right: 15px" asp-for="@Model.Category" type="radio" value="5" />
                    <label>Dry bulk cargo</label>
                    <input style="margin-right: 15px" asp-for="@Model.Category" type="radio" value="6" />
                </div>
            </div>
        </div>
        <br />

        <div class="mb-3">
            <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
</body>
</html>